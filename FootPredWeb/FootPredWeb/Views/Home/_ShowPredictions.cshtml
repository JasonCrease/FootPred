@model FootPredWeb.Models.PredictionsModel

<row class="col-md-6">
    <table class="table">

        <tr>
            <td>@Model.Team1.Name to win</td>
            <td>@Model.MatchDigiOdds.Item1.RoundTo3Sf()</td>
            <td>@Model.MatchOldEnglishOdds.Item1</td>
        </tr>
        <tr>
            <td>@Model.Team2.Name to win</td>
            <td>@Model.MatchDigiOdds.Item2.RoundTo3Sf()</td>
            <td>@Model.MatchOldEnglishOdds.Item2</td>
        </tr>
        <tr>
            <td>Draw</td>
            <td>@Model.MatchDigiOdds.Item3.RoundTo3Sf()</td>
            <td>@Model.MatchOldEnglishOdds.Item3</td>
        </tr>
    </table>
</row>

<table class="table table-bordered">
    <tr>
        <td></td>
        @for (int i = 0; i < @Model.ScoreGrid.Length; i++)
        {
            <td>@i</td>
        }
    </tr>


    @for (int i = 0; i < @Model.ScoreGrid.Length; i++)
    {
        <tr>
            <td>@i</td>
            @foreach (var x in @Model.ScoreGrid[i])
            {
                <td>@((1 / x).RoundTo3Sf())</td>
            }
        </tr>
    }

</table>

<table class="table table-bordered">
    @for (int i = 0; i < Model.ScoreGrid.Length; i++)
    {
        for (int j = 0; j < Model.ScoreGrid.Length; j++)
        {
            <tr>
                <td>@i - @j</td>
                <td>@((1 / Model.ScoreGrid[i][j]).RoundTo3Sf())</td>
            </tr>
        }
    }
</table>